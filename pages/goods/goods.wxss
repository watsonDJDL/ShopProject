/* pages/goods.wxss */

page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
}

.home-page-header {
  background: linear-gradient(#fff, #f5f5f5);
}

.home-page-header {
  display: block;
}


.home-page-header .header-swiper-wrapper {
  height: 300rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  border-radius: 10rpx 20rpx;
}

.home-page-header {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx 20rpx;
}

.swip-image {
  width: 100%;
  height:300rpx;
  border-radius: 10rpx ;
}

.card-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx;
}

.card {
  position: relative;
  width: calc(50% - 30rpx); /* 设置每列宽度为屏幕的一半，并考虑间距 */
  background-color: #f0f0f0;
  margin-bottom: 20rpx;
  padding: 10rpx;
  border-radius: 16rpx;
  box-shadow: 0 0 4rpx rgba(0, 0, 0, 0.2);
}

.good-image {
  width: 100%;
  border-radius: 12rpx;
}

.bottom-des-area {
  height: fit-content;
  display: flex;
  flex-direction: row;
  overflow: hidden;
}

.good-price-text {
  position: absolute;
  right: 0;
  font-size: 18px;
  vertical-align: middle;
  color: coral;
  margin-right: 10rpx;
}

.good-description {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #333;
  font-size: 11px;
  vertical-align: middle;
  width: 60%;
  margin-top: 2rpx;
  white-space: normal;
  line-clamp: 2;
  text-overflow: ellipsis;
  word-break: break-word;
}
